<?xml version='1.0' encoding='utf-8'?>
<widget id="io.davemanuel.ytsmovies" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>YTS Movies</name>
    <description>
        YTS Movie Browser
    </description>
    <author email="jdmanuel242@gmail.com" href="">
        John Dave Manuel
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <preference name="Orientation" value="portrait" />
        <preference name="AndroidLaunchMode" value="singleTop" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="FadeSplashScreen" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="SplashScreenDelay" value="3000" />
        <icon density="ldpi" src="res/icon/android/ldpi.png" />
        <icon density="mdpi" src="res/icon/android/mdpi.png" />
        <icon density="hdpi" src="res/icon/android/hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/xxxhdpi.png" />
        <splash density="xhdpi" height="720" orientation="portrait" platform="android" src="res/screen/android/drawable-port-xhdpi-screen.png" width="1280" />
        <splash density="hdpi" height="480" orientation="portrait" platform="android" src="res/screen/android/drawable-port-hdpi-screen.png" width="800" />
        <splash density="mdpi" height="200" orientation="portrait" platform="android" src="res/screen/android/drawable-port-mdpi-screen.png" width="320" />
        <splash density="ldpi" height="320" orientation="portrait" platform="android" src="res/screen/android/drawable-port-ldpi-screen.png" width="480" />
        <splash density="xxhdpi" height="960" orientation="portrait" platform="android" src="res/screen/android/drawable-port-xxhdpi-screen.png" width="1600" />
        <splash density="xxxhdpi" height="1280" orientation="portrait" platform="android" src="res/screen/android/drawable-port-xxxhdpi-screen.png" width="1920" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#FFFFFF" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <engine name="android" spec="~7.1.4" />
    <engine name="ios" spec="~4.5.5" />
    <plugin name="cordova-plugin-email-composer" spec="^0.9.1" />
    <plugin name="cordova-plugin-admobpro" spec="^2.35.3">
        <variable name="PLAY_SERVICES_VERSION" value="16.0.0" />
    </plugin>
</widget>
